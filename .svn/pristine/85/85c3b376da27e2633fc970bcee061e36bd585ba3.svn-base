<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ResourcesList>
	<CloudProvider Name="BSC">
		<Endpoint>
            <Server>localhost:5050</Server>
			<ConnectorJar>mesos-conn.jar</ConnectorJar>
            <ConnectorClass>es.bsc.conn.mesos.Mesos</ConnectorClass>
		</Endpoint>

		<Images>
			<Image Name="compss/compss:1.4.rc09">
				<CreationTime>60</CreationTime>
				<Adaptors>
					<Adaptor Name="es.bsc.compss.nio.master.NIOAdaptor">
						<SubmissionSystem>
							<Interactive />
						</SubmissionSystem>
						<Ports>
							<MinPort>43100</MinPort>
							<MaxPort>43110</MaxPort>
						</Ports>
					</Adaptor>
					<Adaptor Name="es.bsc.compss.gat.master.GATAdaptor">
						<SubmissionSystem>
							<Batch>
								<Queue>sequential</Queue>
							</Batch>
							<Interactive />
						</SubmissionSystem>
						<BrokerAdaptor>sshtrilead</BrokerAdaptor>
					</Adaptor>
				</Adaptors>
			</Image>
		</Images>

		<InstanceTypes>
			<InstanceType Name="small">
				<Processor Name="Processor1">
					<ComputingUnits>1</ComputingUnits>
				</Processor>
				<Memory>
					<Size>0.5</Size>
				</Memory>
				<Storage>
					<Size>5.0</Size>
				</Storage>
				<Price>
					<TimeUnit>1</TimeUnit>
