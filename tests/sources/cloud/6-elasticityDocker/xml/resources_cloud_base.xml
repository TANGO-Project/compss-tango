<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ResourcesList>
	<CloudProvider Name="Docker">
		<Endpoint>
			<Server>unix:///var/run/docker.sock</Server>
            <ConnectorJar>docker-conn.jar</ConnectorJar>
            <ConnectorClass>es.bsc.conn.docker.Docker</ConnectorClass>
		</Endpoint>

		<Images>
			<Image Name="compss/compss:1.4.rc09">
				<CreationTime>1</CreationTime>
				<Adaptors>
					<Adaptor Name="integratedtoolkit.nio.master.NIOAdaptor">
						<SubmissionSystem>
							<Interactive />
						</SubmissionSystem>
						<Ports>
							<MinPort>43000</MinPort>
							<MaxPort>43003</MaxPort>
						</Ports>
					</Adaptor>
					<Adaptor Name="integratedtoolkit.gat.master.GATAdaptor">
						<SubmissionSystem>
							<Batch>
								<Queue>sequential</Queue>
							</Batch>
							<Interactive />
						</SubmissionSystem>
						<BrokerAdaptor>sshtrilead</BrokerAdaptor>
					</Adaptor>
				</Adaptors>
			</Image>
		</Images>

		<InstanceTypes>
			<InstanceType Name="small">
				<Processor Name="Processor1">
					<ComputingUnits>1</ComputingUnits>
				</Processor>
				<Memory>
					<Size>2.0</Size>
				</Memory>
				<Storage>
					<Size>10.0</Size>
				</Storage>
			</InstanceType>
			<InstanceType Name="medium">
				<Processor Name="Processor1">
					<ComputingUnits>2</ComputingUnits>
				</Processor>
				<Memory>
					<Size>3.0</Size>
				</Memory>
				<Storage>
					<Size>10.0</Size>
				</Storage>
			</InstanceType>
			<InstanceType Name="large">
				<Processor Name="Processor1">
					<ComputingUnits>4</ComputingUnits>
				</Processor>
				<Memory>
					<Size>4</Size>
				</Memory>
				<Storage>
					<Size>10.0</Size>
				</Storage>
			</InstanceType>
			<InstanceType Name="extra_large">
				<Processor Name="Processor1">
					<ComputingUnits>4</ComputingUnits>
				</Processor>
				<Memory>
					<Size>8</Size>
				</Memory>
				<Storage>
					<Size>10.0</Size>
				</Storage>
			</InstanceType>
		</InstanceTypes>
	</CloudProvider>

</ResourcesList>
