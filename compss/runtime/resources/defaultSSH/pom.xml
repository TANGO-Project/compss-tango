<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- GENERAL INFORMATION -->
	<artifactId>compss-defaultSSH-connector</artifactId>
	<packaging>jar</packaging>
	<parent>
		<groupId>es.bsc.compss</groupId>
		<artifactId>compss-resources</artifactId>
<version>2.0.rc1704</version>
		<relativePath>..</relativePath>
	</parent>


	<!-- PROJECT INFORMATION -->
	<name>COMPSs default SSH Connector</name>
	<description>COMPSs Default SSH Connector</description>
	<url>http://www.bsc.es</url>
	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
		</license>
	</licenses>
	<organization>
		<name>BSC</name>
		<url>http://www.bsc.es</url>
	</organization>

	<!-- PROPERTIES -->
	<properties>
	</properties>

	<!-- DEPENDENCIES -->
	<dependencies>
		<dependency>
			<groupId>es.bsc</groupId>
			<artifactId>connectors-all</artifactId>
		</dependency>

		<dependency>
			<groupId>es.bsc.compss</groupId>
			<artifactId>compss-resources-commons</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<!-- BUILD -->
	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>es.bsc</groupId>
									<artifactId>dummy-conn</artifactId>
									<version>${conn.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
									<destFileName>dummy-conn.jar</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>es.bsc</groupId>
									<artifactId>jclouds-conn</artifactId>
									<version>${conn.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
									<destFileName>jclouds-conn.jar</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>es.bsc</groupId>
									<artifactId>mesos-conn</artifactId>
									<version>${conn.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
									<destFileName>mesos-conn.jar</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>es.bsc</groupId>
									<artifactId>rocci-conn</artifactId>
									<version>${conn.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
									<destFileName>rocci-conn.jar</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>es.bsc</groupId>
									<artifactId>vmm-conn</artifactId>
									<version>${conn.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
									<destFileName>vmm-conn.jar</destFileName>
								</artifactItem>
								<artifactItem>
                                                                        <groupId>es.bsc</groupId>
                                                                        <artifactId>slurm-conn</artifactId>
                                                                        <version>${conn.version}</version>
                                                                        <type>jar</type>
                                                                        <overWrite>false</overWrite>
                                                                        <outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
                                                                        <destFileName>slurm-conn.jar</destFileName>
                                                                </artifactItem>
								<artifactItem>
									<groupId>es.bsc</groupId>
									<artifactId>docker-conn</artifactId>
									<version>${conn.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${project.build.directory}/cloud-conn/</outputDirectory>
									<destFileName>docker-conn.jar</destFileName>
								</artifactItem>
							</artifactItems>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
