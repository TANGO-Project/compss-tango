#!/bin/bash -e

  #---------------------------------------------------------------------------------------------------------------------
  # MAIN PROGRAM
  #---------------------------------------------------------------------------------------------------------------------
  #Define script variables
  script_dir=$(dirname $0)

  #---------------------------------------------------------------------------------------------------------------------
  #Prepare vm to lauch tests.
  echo -e "\e[0m"
  echo "**************************"
  echo "*** Compile COMPSs SVN ***"
  echo "**************************"
  echo -e "\e[0m"
  cd ${script_dir}/../../../
  mvn -U clean install
  if [ $? -ne 0 ]; then
    exit 1
  fi

  cd ${script_dir}

  #Process completed
  exit 0

